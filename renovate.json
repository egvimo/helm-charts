{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Chart\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\\s?appVersion:\\s?\\\"?v?(?<currentValue>[\\w+\\.\\-]*)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "bumpVersions": [
    {
      "filePatterns": ["{{packageFileDir}}/Chart.yaml"],
      "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
      "bumpType": "patch"
    }
  ]
}
