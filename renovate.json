{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)Chart\\.yaml$"],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\\s?appVersion:\\s?\\\"?v?(?<currentValue>[\\w+\\.\\-]*)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["helmv3", "regex"],
      "matchPaths": ["**/Chart.yaml"],
      "postUpgradeTasks": {
        "commands": [
          "yq -i '.version = ((.appVersion // .dependencies[0].version) + \"-chart.1\")' Chart.yaml"
        ],
        "fileFilters": ["Chart.yaml"]
      }
    }
  ]
}
